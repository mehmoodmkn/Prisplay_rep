<section id="content_wrapper">
      <header id="topbar" class="alt">
        <div class="topbar-left">
          <ol class="breadcrumb">
            <li class="crumb-icon">
              <a href="dashboard1.html">
                <span class="fa fa-home"></span>
              </a>
            </li>
            <li class="crumb-active">
              <a href="/employees">Payroll</a>
            </li>
            <li class="crumb-link">
              <a href="/">Home</a>
            </li>
            <li class="crumb-trail">Payroll</li>
          </ol>
        </div>
        </header>

      <section id="content" class="table-layout animated fadeIn">

        <!-- begin: .tray-center -->
        <div class="tray tray-center">
          
<div class="table-responsive">
            <table class="table admin-form theme-warning tc-checkbox-1 fs13">
            <thead>
            <tr class="bg-light">
                <th class="text-center">User Email</th>
                <th class="text-center">Amount</th>
                <th class="text-center">Bonus</th>
                <th class="text-center">Salary Month</th>
                <th class="text-center">Salary Year</th>
                <th class="text-center">Payment Method</th>
                <%if current_user.designation == "admin"%>
                <th class="text-center">Add Payment</th>
                <%end%>
            </tr>
            </thead>
            <tbody>
              <%@payrolls.each do |payroll|%>
            <tr>
            <td class="text-center"><%=payroll.user.email%></td>
            <td class="text-center"><%=payroll.amount%></td>
            <td class="text-center"><%=payroll.bonus%></td>
            <td class="text-center"><%=payroll.salary_month%></td>
            <td class="text-center"><%=payroll.salary_year%></td>
            <td class="text-center"><%=payroll.payment_method%></td>
            <%if current_user.designation == "admin"%>
            <td class="text-center"><a class="btn" href="/create-payroll?id=<%=payroll.user.id%>">Add Payroll</a></td>
            <%end%>
          </tr>
            <%end%>
            </tbody>
            </table>
          </div>


 